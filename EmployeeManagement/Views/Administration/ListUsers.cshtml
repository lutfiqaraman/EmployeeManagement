@model IEnumerable<IdentityUser>;

@{
    ViewBag.Title = "All Users";
}

<h1>All Users</h1>

@if (Model.Any())
{
    <div class="m-3">
        <a class="btn btn-primary" asp-controller="Account" asp-action="Register">
            Add User
        </a>
    </div>

    foreach (var user in Model)
    {
        <div class="m-3">
            <div class="card">
                <div class="card-header">
                    <h3>User Info</h3>
                </div>
                <div class="card-body">
                    <p class="card-text">
                        User ID: @user.Id
                    </p>
                    <p class="card-text">
                        User Name: @user.UserName
                    </p>
                </div>
                <div class="card-footer">
                    <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">

                        <a asp-controller="Administration"
                           asp-action="EditUser" asp-route-id="@EmployeeManagement.Presentation.Encryption.Encrypt(@user.Id)" class="btn btn-primary">
                            Edit
                        </a>

                        <span id="confirmDeleteSpan_@user.Id" style="display:none">
                            <span>Are you sure you want to delete a user ?</span>
                            <button type="submit" class="btn btn-danger">Yes</button>
                            <a href="#" class="btn btn-primary"
                               onclick="confirmDelete('@user.Id', false)">No</a>
                        </span>

                        <span id="deleteSpan_@user.Id">
                            <a href="#" class="btn btn-danger"
                               onclick="confirmDelete('@user.Id', true)">Delete</a>
                        </span>
                    </form>
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            No users created yet
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button below to create a user
            </h5>
            <a class="btn btn-primary" asp-controller="Account" asp-action="Register">
                Create User
            </a>
        </div>
    </div>
}

<script src="~/js/confirmdelete.js"></script>