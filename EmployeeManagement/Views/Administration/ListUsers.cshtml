@model IEnumerable<IdentityUser>;

@{
    ViewBag.Title = "All Users";
}

<h1>All Users</h1>

@if (Model.Any())
{
    <div class="m-3">
        <a class="btn btn-primary" asp-controller="Account" asp-action="Register">
            Add User
        </a>
    </div>

    foreach (var user in Model)
    {
        <div class="m-3">
            <div class="card">
                <div class="card-header">
                    <h3>Role Info</h3>
                </div>
                <div class="card-body">
                    <p class="card-text">
                        Role ID: @user.Id
                    </p>
                    <p class="card-text">
                        Role Name: @user.UserName
                    </p>
                </div>
                <div class="card-footer">
                    <a asp-controller="Administration" asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-primary">Edit</a>
                    <a href="#" class="btn btn-danger">Delete</a>
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            No users created yet
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button below to create a user
            </h5>
            <a class="btn btn-primary" asp-controller="Administration" asp-action="CreateUser">
                Create User
            </a>
        </div>
    </div>
}
