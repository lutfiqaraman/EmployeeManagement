@model IEnumerable<IdentityUser>;

@{
    ViewBag.Title = "All Users";
}

<h1>All Users</h1>

@if (Model.Any())
{
    <div class="m-3">
        <a class="btn btn-primary" asp-controller="Account" asp-action="Register">
            Add User
        </a>
    </div>

    foreach (var user in Model)
    {
        <div class="m-3">
            <div class="card">
                <div class="card-header">
                    <h3>User Info</h3>
                </div>
                <div class="card-body">
                    <p class="card-text">
                        User ID: @user.Id
                    </p>
                    <p class="card-text">
                        User Name: @user.UserName
                    </p>
                </div>
                <div class="card-footer">
                    <a asp-controller="Administration" asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-primary">Edit</a>
                    
                    <!-- Button trigger modal -->
                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                        Delete
                    </button>

                    <!-- Modal -->
                    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Delete A user</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    Are you sure you want to delete the user ?
                                </div>
                                <div class="modal-footer">
                                    <a asp-controller="Administration" asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-danger">Delete</a>
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            No users created yet
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button below to create a user
            </h5>
            <a class="btn btn-primary" asp-controller="Account" asp-action="Register">
                Create User
            </a>
        </div>
    </div>
}
