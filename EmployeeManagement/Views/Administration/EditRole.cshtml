@model EditRoleViewModel

@{
    ViewBag.Title = "EMS - Edit the Role";
}

<h1>Edit the Role</h1>

@{
    var data = ViewData["Message"];
}

<form class="mt-3" method="post">

    <div class="mb-3">
        <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-12">
            <input asp-for="RoleName" class="form-control" placeholder="Email" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Update</button>
        <a asp-controller="Administration" asp-action="ListRoles" class="btn btn-primary">Cancel</a>
    </div>

    <div class="card">
        <div class="card-header">
            <h3>Users in this role</h3>
        </div>
        <div class="card-body">
            @if (Model.Users.Any())
            {
                foreach (var user in Model.Users)
                {
                    <h5 class="card-title">@user</h5>
                }
            }
            else
            {
                <h5 class="card-title">no users ...</h5>
            }
        </div>
        <div class="card-footer">
            <a class="btn btn-primary" id="addUser">Add User</a>
            <a class="btn btn-primary" id="removeUser">Remove User</a>
        </div>

        <!-- Modal -->
        <div class="modal fade" id="addUserModal" tabindex="-1" aria-labelledby="addUserModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        ...
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Save changes</button>
                    </div>
                </div>
            </div>
        </div>

    </div>

</form>

<script type="text/javascript">
    $(document).ready(function () {
        $("#addUser").click(function () {
            $("#addUserModal").modal('show');
        });

        //$("#btnHideModal").click(function () {
        //    $("#loginModal").modal('hide');
        //});
    });
</script>  