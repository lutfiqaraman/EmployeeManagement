@model EditRoleViewModel

@{
    ViewBag.Title = "EMS - Edit the Role";
}

<h1>Edit the Role</h1>

@{
    var data = ViewData["Message"];
}

<form class="mt-3" method="post">

    <div class="mb-3">
        <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-12">
            <input asp-for="RoleName" class="form-control" placeholder="Email" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Update</button>
        <a asp-controller="Administration" asp-action="ListRoles" class="btn btn-primary">Cancel</a>
    </div>

    <div class="card">
        <div class="card-header">
            <h3>Users in this role</h3>
        </div>
        <div class="card-body">
            @if (Model.Users.Any())
            {
                foreach (var user in Model.Users)
                {
                    <h5 class="card-title">@user</h5>
                }
            }
            else
            {
                <h5 class="card-title">no users ...</h5>
            }
        </div>
        <div class="card-footer">
            <a asp-controller="Administration" asp-action="EditUsersInRole" asp-route-roleId="@Model.Id" 
               class="btn btn-primary">Add or Remove Users</a>
        </div>
    </div>

</form>

<script src="~/js/AddUserToRole.js"></script> 