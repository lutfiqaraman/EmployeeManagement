@model IEnumerable<IdentityRole>;

@{
    ViewBag.Title = "All Roles";
}

<h1>All Roles</h1>

@if (Model.Any())
{
    <div class="m-3">
        <a class="btn btn-primary" asp-controller="Administration" asp-action="CreateRole">
            Add Role
        </a>
    </div>

    foreach (var role in Model)
    {
        <div class="m-3">
            <div class="card">
                <div class="card-header">
                    <h3>Role Info</h3>
                </div>
                <div class="card-body">
                    <p class="card-text">
                        Role ID: @role.Id
                    </p>
                    <p class="card-text">
                        Role Name: @role.Name
                    </p>
                </div>
                <div class="card-footer">
                    <a asp-controller="Administration" asp-action="EditRole" class="btn btn-primary">Edit</a>
                    <a href="#" class="btn btn-danger">Delete</a>
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            No roles created roles yet
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button below to create a role
            </h5>
            <a class="btn btn-primary" asp-controller="Administration" asp-action="CreateRole">
                Create Role
            </a>
        </div>
    </div>
}
