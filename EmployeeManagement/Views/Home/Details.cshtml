@model EmployeeManagement.Presentation.Models.Employees.EmployeeViewModel

@{
    ViewBag.Title = "Employees Details";
}

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">

            <div class="card-header">
                <h1>@Model.Employee.Name</h1>
            </div>

            <div class="card-body text-center">
                <img class="card-img-top" src="~/images/noimage.png" alt="Photo of the person" />

                <p>Employee ID: @Model.Employee.Id</p>
                <p>Employee Email: @Model.Employee.Email</p>
                <p>Employee Department: @Model.Employee.Department</p>
            </div>

            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="index" class="btn btn-primary" title="back">
                    <i class="fa fa-backward"></i>
                </a>
                <a href="#" class="btn btn-primary" title="edit">
                    <i class="fa fa-edit"></i>
                </a>
                <a href="#" class="btn btn-danger" title="delete">
                    <i class="fa fa-trash"></i>
                </a>
            </div>

        </div>
    </div>
</div>