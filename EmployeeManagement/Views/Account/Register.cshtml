@model EmployeeManagement.Presentation.Models.Users.RegisterViewModel

<h1>User Registration</h1>

<div class="row">
    <div class="col-md-12">
        <form method="post">

            <div class="mb-3">
                <label asp-for="Email" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-12">
                    <input asp-for="Email" class="form-control" placeholder="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            
            <div class="mb-3">
                <label asp-for="Password" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-12">
                    <input asp-for="Password" class="form-control" placeholder="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            
            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-12">
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            
            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Register</button>
            </div>
            
        </form>
    </div>
</div>