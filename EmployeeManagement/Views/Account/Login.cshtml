@model LoginViewModel

@{ 
    ViewBag.Title = "EMS - Login";
}



<div class="row">
    <div class="col-md-6">
        <h1>Local Account Login</h1>
        <hr />
        <form method="post">

            <div class="mb-3">
                <label asp-for="Email" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-12">
                    <input asp-for="Email" class="form-control" placeholder="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-12">
                    <input asp-for="Password" class="form-control" placeholder="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-4">
                <div class="form-check">
                    <input asp-for="RememberMe" class="form-check-input" type="checkbox" value="" id="CheckRememberMe">
                    <label class="form-check-label" for="CheckRememberMe">
                        @Html.DisplayNameFor(m => m.RememberMe)
                    </label>
                </div>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Login</button>
            </div>

        </form>
    </div>

    <div class="col-md-6">
        <h1>External Login</h1>
        <hr />
        @{ 
            if (Model.ExternalLogins.Count == 0)
            {
                <div>No external logins configured</div>
            } else
            {
                <form method="post" asp-action="ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl">
                    <div>
                        @foreach (var provider in Model.ExternalLogins)
                        {
                            <button type="submit" class="btn btn-primary" 
                                    name="provider"
                                    title="Login using your @provider.DisplayName account"
                                    value="@provider.Name">
                                @provider.DisplayName
                            </button>
                        }
                    </div>
                </form>
            }
        }
    </div>
</div>